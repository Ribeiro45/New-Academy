# Database
DATABASE_URL="postgresql://user:password@localhost:5432/academy_db?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Email via Resend (for password recovery and notifications)
# Get your API key at: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Optional: Custom from email (requires verified domain at https://resend.com/domains)
# Default: onboarding@resend.dev
RESEND_FROM_EMAIL=onboarding@resend.dev
